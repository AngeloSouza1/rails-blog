<!DOCTYPE html>
<html>
<head>

  <!-- Trix -->
  <%= javascript_include_tag 'trix' %>
  <%= stylesheet_link_tag 'trix' %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <!-- Import Map -->
  <%= javascript_importmap_tags %>

  <!-- Bootstrap CSS -->
  <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' %>

  <!-- Custom CSS -->
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>


  <!-- Bootstrap JS -->
  <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js' %>

  <title>Blog</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
</head>

<body>
<header>
  <%= render "layouts/navbar" %>
  <%= render "layouts/alerts" %>
</header>

<main class="container">
  <%= yield %>
</main>
</body>
</html>
